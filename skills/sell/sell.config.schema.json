{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vibes.diy/sell.config.schema.json",
  "title": "Vibes Sell Configuration",
  "description": "Configuration for Vibes Sell SaaS deployment",
  "type": "object",
  "required": ["app", "domain", "clerk"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "app": {
      "type": "object",
      "description": "Application settings",
      "required": ["source", "name"],
      "properties": {
        "source": {
          "type": "string",
          "description": "Path to app.jsx source file",
          "default": "app.jsx"
        },
        "name": {
          "type": "string",
          "description": "App identifier (lowercase, hyphens allowed)",
          "pattern": "^[a-z0-9-]+$"
        },
        "title": {
          "type": "string",
          "description": "Display title (e.g., 'Wedding Photos')"
        },
        "tagline": {
          "type": "string",
          "description": "App tagline for landing page",
          "default": "Your own private workspace. Get started in seconds."
        }
      }
    },
    "domain": {
      "type": "string",
      "description": "Root domain (e.g., 'fantasy.wedding')",
      "pattern": "^[a-z0-9][a-z0-9-]*\\.[a-z]{2,}$"
    },
    "pricing": {
      "type": "object",
      "description": "Subscription pricing",
      "properties": {
        "monthly": {
          "type": "string",
          "description": "Monthly price (e.g., '$9')",
          "default": "$9"
        },
        "yearly": {
          "type": "string",
          "description": "Yearly price (e.g., '$89')",
          "default": "$89"
        }
      }
    },
    "features": {
      "type": "array",
      "description": "Feature list for pricing cards",
      "items": {
        "type": "string"
      },
      "default": ["Unlimited usage", "Private workspace", "Custom subdomain"]
    },
    "clerk": {
      "type": "object",
      "description": "Clerk authentication settings",
      "required": ["publishableKey"],
      "properties": {
        "publishableKey": {
          "type": "string",
          "description": "Clerk publishable key (pk_test_... or pk_live_...)",
          "pattern": "^pk_(test|live)_"
        }
      }
    },
    "admin": {
      "type": "object",
      "description": "Admin settings",
      "properties": {
        "userIds": {
          "type": "array",
          "description": "Clerk user IDs with admin access",
          "items": {
            "type": "string",
            "pattern": "^user_"
          },
          "default": []
        }
      }
    },
    "cloudflare": {
      "type": "object",
      "description": "Cloudflare deployment settings (auto-populated)",
      "properties": {
        "pagesProject": {
          "type": ["string", "null"],
          "description": "Cloudflare Pages project name"
        },
        "kvNamespaceId": {
          "type": ["string", "null"],
          "description": "KV namespace ID for tenant data"
        },
        "zoneId": {
          "type": ["string", "null"],
          "description": "Cloudflare Zone ID"
        },
        "accountId": {
          "type": ["string", "null"],
          "description": "Cloudflare Account ID"
        }
      }
    },
    "deployment": {
      "type": "object",
      "description": "Deployment state (auto-populated)",
      "properties": {
        "hash": {
          "type": ["string", "null"],
          "description": "Content hash of last deployment"
        },
        "lastDeployed": {
          "type": ["string", "null"],
          "description": "ISO timestamp of last deployment"
        },
        "workerName": {
          "type": ["string", "null"],
          "description": "Cloudflare Worker name"
        }
      }
    }
  }
}
